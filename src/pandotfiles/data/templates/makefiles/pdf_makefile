logdir = {logdir}
builddir = {builddir}
buildlatexdir = {buildlatexdir}
pandocfiles = {pandocfiles}
mainfile = {mainfile}

PD := pandoc

mkfile_path := $(abspath $(lastword $(MAKEFILE_LIST)))
current_dir := $(notdir $(patsubst %/,%,$(dir $(mkfile_path))))

mainfname = $(notdir $(mainfile))
mainbname = $(mainfname:%.md=%)
mainpdf = $(addprefix $(builddir)/,$(addsuffix .pdf,$(mainbname)))

auto_template_loc = $(logdir)/latextemplate.template
template_default_loc = $(logdir)

pandocflags += --template=$(auto_template_loc)
pandocflags += -d options.yaml

ifneq ($(wildcard $(logdir)/template_default_osa-article.yaml),)
    texflag = -pdf  -cd -quiet -shell-escape -outdir="$(logdir)" 
    texflagbuild = -pdf -cd -quiet -shell-escape -outdir="$(logdir)" 
else ifneq ($(wildcard $(logdir)/template_default_ulthese.yaml),)
    texflag = -pdfxe -cd -quiet -shell-escape -outdir="$(logdir)" 
    texflagbuild = -pdfxe -cd -quiet -shell-escape -outdir="$(logdir)" 
    pandocflags += --top-level-division=chapter 
else ifneq ($(wildcard $(logdir)/template_default_spie.yaml),)
    texflag = -pdf -cd -quiet -shell-escape -outdir="$(logdir)" 
    texflagbuild = -pdf -cd -quiet -shell-escape -outdir="$(logdir)" 
else ifneq ($(wildcard $(logdir)/template_default_spieman.yaml),)
    texflag = -pdf -cd -quiet -shell-escape -outdir="$(logdir)" 
    texflagbuild = -pdf -cd -quiet -shell-escape -outdir="$(logdir)" 
else
    texflag = -pdflua -cd -quiet -shell-escape -outdir="$(logdir)" 
    texflagbuild = -pdflua -cd -quiet -shell-escape -outdir="$(logdir)" 
endif

FIGURETARGETSLOC = $(addprefix ../,$(FIGURETARGETS))

.PHONY: all clean open pdf

all : $(mainpdf)

clean: 
	-@ rm -r $(logdir) $(builddir) $(buildlatexdir)

$(mainpdf): $(mainfile) $(pandocfiles) $(auto_template_loc) $(FIGURETARGETSLOC) options.yaml
	$(MAKE) -f $(mkfile_path) pdf

$(auto_template_loc): $(mainfile)
	-@ mkdir -p $(logdir)
	-@ rm $(logdir)/template_default*.yaml
	-@ rm $(logdir)/*template*
	../.pandot/pandoc/injection/genlatextemplate_script.py -o $(auto_template_loc) -y $(template_default_loc)/ -m $(mainfile)

pdf:
	-@ rm $(logdir)/pandoc_backup.tex
	$(PD) $(pandocflags) -o pandoc_backup.tex $(wildcard $(logdir)/template_default*.yaml) $(mainfile) $(filter-out options.yaml,$(wildcard *.yaml)) 
	-@ cp ../.pandot/latex/defaults/latexmkrc .
	-@ cp -r ../.pandot/latex/docstyle_latex/img log/
	-@ perl -pi -e 's/\(cite.*\){{internal-/\1internal{{/g' pandoc_backup.tex;\
	perl -pi -e 's/\\cite[t,p]{{/\\cite{{/g' pandoc_backup.tex;\
	perl -pi -0e 's/^\s*\n(\\begin{{align}})/\1/mg; s/^(\\end{{align}}\s*)\n\n/\1\n/mg' pandoc_backup.tex
	latexmk $(texflag) pandoc_backup.tex
	-@ mkdir -p $(buildlatexdir)
	-@ echo latexmk $(texflag) pandoc_backup.tex > latex_cmd.sh
	-@ rsync -ax --exclude $(buildlatexdir) --exclude '*.md' ./* $(buildlatexdir)
	-@ rm $(buildlatexdir)/Makefile
	-@ rm latex_cmd.sh
	-@ mv pandoc_backup.tex $(logdir)
	-@ mv latexmkrc $(logdir)
	-@ mkdir -p $(builddir)
	-@ cp $(logdir)/pandoc_backup.pdf $(mainpdf)

open:
	-open $(mainpdf)
